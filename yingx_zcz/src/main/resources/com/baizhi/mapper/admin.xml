<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baizhi.dao.AdminDAO">
    <select id="login" resultType="com.baizhi.entity.Admin" parameterType="String">
    select * from admin where username=#{username}
    </select>


    <select id="queryAll" resultType="com.baizhi.entity.Admin" >
        select  * from admin
    </select>

    <select id="queryOne" resultType="com.baizhi.entity.Admin" parameterType="String">
        select * from admin where id=#{id}
    </select>

    <insert id="add" parameterType="com.baizhi.entity.Admin" >
        insert into admin values(#{id},#{username},#{password},#{status},#{level},#{salt})
    </insert>


    <update id="update" parameterType="com.baizhi.entity.Admin">
        update admin set username=#{username},password=#{password},status=#{status},level=#{level},salt=#{salt}
    </update>

    <delete id="delete" parameterType="com.baizhi.entity.Admin" >
        delete from admin where id=#{id}
    </delete>
</mapper>